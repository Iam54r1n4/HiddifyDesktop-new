<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ClashGui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClashGui.Controls.ClashLogsControl">
    <Design.DataContext>
        <viewModels:ClashLogsViewModel />
    </Design.DataContext>
    <ScrollViewer>
        <ListBox Items="{Binding Logs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding DateTime}" Margin="0 0 5 0"></TextBlock>
                            <TextBlock Text="{Binding Type}" Foreground="{Binding Brush}"></TextBlock>
                        </StackPanel>
                        <TextBlock Text="{Binding Payload}" TextWrapping="Wrap"></TextBlock>
                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </ScrollViewer>
</UserControl>