<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ClashGui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClashGui.Controls.ConnectionsControl">
    <Design.DataContext>
        <viewModels:ConnectionsViewModel />
    </Design.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding DownloadTotal }"></TextBlock>
            <TextBlock Text="{Binding UploadTotal }"></TextBlock>
        </StackPanel>
        <DataGrid Items="{Binding Connections}" AutoGenerateColumns="True"></DataGrid>
    </StackPanel>
</UserControl>
