<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:designTime="clr-namespace:ClashGui.DesignTime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClashGui.Views.SettingsView">
    <Design.DataContext>
        <designTime:DesignSettingsViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="*,Auto" RowDefinitions="*">
        <TextBlock Text="Clash Api Address"></TextBlock>
        <TextBox Grid.Column="1" Text="{Binding ClashApiAddress, Mode=TwoWay}"></TextBox>
        <Button Grid.Column="1" Content="Save" Command="{Binding SaveCommand}"></Button>
    </Grid>
</UserControl>
