<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:designTime="clr-namespace:ClashGui.DesignTime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClashGui.Views.SettingsView">
    <Design.DataContext>
        <designTime:DesignSettingsViewModel />
    </Design.DataContext>
    <Border Padding="10">
        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
            <TextBlock Text="System Proxy"></TextBlock>
            <ListBox Grid.Row="0" Grid.Column="1"
                     Items="{Binding SystemProxyModes}"
                     SelectedItem="{Binding SystemProxyMode, Mode=TwoWay}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.Styles>
                    <Style Selector="ListBox ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border Background="Transparent">
                                        <RadioButton
                                            Content="{TemplateBinding ContentPresenter.Content}"
                                            IsChecked="{Binding Path=IsSelected,RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"></Setter>
                    </Style>
                </ListBox.Styles>
            </ListBox>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Core Service"></TextBlock>
            <ToggleSwitch Name="ServiceModeToggle" Grid.Row="1" Grid.Column="1"
                          IsChecked="{Binding UseServiceMode}"
                          CommandParameter="{Binding IsChecked, ElementName=ServiceModeToggle}"
                          Command="{Binding SetServiceModeCommand}"></ToggleSwitch>
        </Grid>
    </Border>
</UserControl>