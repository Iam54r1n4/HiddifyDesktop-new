<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:designTime="clr-namespace:ClashGui.DesignTime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClashGui.Views.ClashInfoView">
    <Design.DataContext>
        <designTime:DesignClashInfoViewModel />
    </Design.DataContext>
    <StackPanel>
        <ToggleSwitch HorizontalAlignment="Center" Name="ClashToggle"
                      OffContent="Stopped"
                      OnContent="Started"
                      IsChecked="{Binding IsRunning}"
                      Command="{Binding ToggleClash}"
                      CommandParameter="{Binding IsChecked, ElementName=ClashToggle}" />
        <TextBlock TextAlignment="Center" Text="{Binding RealtimeSpeed}"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Clash "></TextBlock>
            <TextBlock Text="{Binding Version}"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>