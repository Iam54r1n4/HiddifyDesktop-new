<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <StackPanel Classes="SettingLine">
                <TextBlock Classes="SettingHeader" Text="SettingItem"></TextBlock>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="StackPanel.SettingLine">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
    </Style>
    <Style Selector="StackPanel.SettingLine TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <Style Selector="StackPanel.SettingLine TextBlock.SettingHeader">
        <Setter Property="Width" Value="150" />
        <Setter Property="TextAlignment" Value="Right" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0 0 5 0" />
    </Style>
    <Style Selector="StackPanel.SettingLine TextBox">
        <Setter Property="Width" Value="200"></Setter>
    </Style>
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource TextControlBackground}"></Setter>
    </Style>
</Styles>
